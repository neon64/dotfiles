#!/bin/bash

options="Start Bluetooth
Stop Bluetooth"
selection=$(echo "$options" | fzf --reverse --height=4 --color=16 )
case "$selection" in
    'Start Bluetooth')
        rfkill unblock bluetooth
        sudo systemctl start bluetooth
        sleep 2
        systemd-cat blueman-manager&
        disown
        ;;
    'Stop Bluetooth')
        killall blueman-manager blueman-applet
        sudo systemctl stop bluetooth
        rfkill block bluetooth
        ;;
    *)
        echo "invalid option selected"
        exit 1
esac
