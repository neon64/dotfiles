#!/bin/sh

sudo udevadm trigger --verbose --action=remove --subsystem-match=drm --property-match="MINOR=1"
sleep 0.1

if lsmod | grep -q nouveau; then
    sudo rmmod nouveau
fi
if lsmod | grep -q nvidia; then
    sudo rmmod nvidia_modeset nvidia_drm nvidia
fi
sudo sh -c 'echo OFF > /proc/acpi/bbswitch'
cat /proc/acpi/bbswitch

