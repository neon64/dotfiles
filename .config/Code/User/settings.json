{
    "editor.fontFamily": "Iosevka",
    "editor.minimap.enabled": true,
    "editor.detectIndentation": true,
    "files.associations": {
        ".*": "shellscript",
        "env-example": "shellscript",
        "*.pl": "prolog"
    },
    "workbench.startupEditor": "welcomePage",
    "files.trimTrailingWhitespace": true,
    "php.suggest.basic": false,
    "breadcrumbs.enabled": true,
    "cSpell.language": "en-GB",
    "cSpell.numSuggestions": 8,
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "[jade]": {},
    "open-in-browser.default": "firefox",
    "editor.lineHeight": 24,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-q>": false
    },
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.synctex.synctexjs.enabled": false,
    "editor.rulers": [
        80
    ],
    "git.enableSmartCommit": true,
    "editor.fontLigatures": true,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "editor.fontSize": 13,
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,
    "markdown-preview-enhanced.mathRenderingOption": "None",
    "ccls.codeLens.localVariables": true,
    "ccls.codeLens.renderInline": true,
    "ccls.codeLens.enabled": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb",
        "*.docx": "default"
    },
    "mesonbuild.configureOnOpen": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.colorTheme": "Ocean Dark Extended",
    "haskell.serverExecutablePath": "/usr/bin/haskell-language-server-8.8.4",
    "shellcheck.enable": false,
    "rewrap.autoWrap.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "cSpell.enableFiletypes": [
        "!haskell"
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    }
}
