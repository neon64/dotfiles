
### Ricing

include colorscheme

set $arc-light-bg #e7e8eb
set $arc-light-bg-3 #969dac
set $arc-light-text #dddee2

set $arc-dark-bg #323843
set $arc-dark-bg-2 #2a3039
set $arc-dark-bg-3 #2f343f
set $arc-dark-darkest #21242b
set $arc-dark-text #8c96a2

set $base005 #2D323D

# fits Base16-Tomorrow-Night theme
set $bd-color              $arc-dark-darkest
set $focused-bd-color      $base005
set $urgent-bd-color       $base08
set $indicator             $base0B

set $bg-color              $arc-dark-darkest
set $focused-bg-color      $base005

set $inner-bd-color         $base00
set $focused-inner-bd-color $base00

set $inactive-text-color   $base02
set $text-color            $base02
set $focused-text-color    $arc-light-text
set $urgent-bg-color       $base08

# window colors
#                       border              background          text                  indicator      child border
client.focused          $focused-bd-color   $focused-bg-color   $focused-text-color   $focused-inner-bd-color     $focused-inner-bd-color
client.unfocused        $bd-color           $bg-color           $text-color           $inner-bd-color     $inner-bd-color
client.focused_inactive $bd-color           $bg-color           $text-color           $inner-bd-color     $inner-bd-color
client.urgent           $urgent-bg-color    $urgent-bg-color    $focused-text-color   $urgent-bd-color     $urgent-bd-color

# window borders and gaps
set $borderwidth 1
default_border normal $borderwidth
default_floating_border normal $borderwidth
hide_edge_borders both
gaps inner 10
gaps outer 0
titlebar_padding 6 8
font pango:Noto Sans Regular 10

