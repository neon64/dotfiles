# Generic Keyboard
input * {
    xkb_options caps:super
}

# 2010 MacBook Pro hardware
input "1452:566:bcm5974" {
    tap enabled
    natural_scroll enabled
    #dwt disabled
    #accel_profile adaptive
    #accel_profile adaptive
    #pointer_accel -100, 100
    click_method clickfinger
}

input "1133:45091:MX_Master_3" {
    accel_profile adaptive
    pointer_accel 1
}

