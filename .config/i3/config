# window colors
#                       border              background         text                  indicator  child border
client.focused          $bg-color           $bg-color          $text-color           $green     $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color  $green     $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color  $green     $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color           $green     $urgent-bg-color

new_window normal 0
